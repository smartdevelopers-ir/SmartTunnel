<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txtServerAddressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:text="@string/server_address"
        android:layout_marginTop="8dp"
        android:labelFor="@id/edtServerAddress"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtServerAddressLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtServerAddressLabel"
        app:layout_constraintStart_toStartOf="@id/txtServerAddressLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtServerAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="textWebEditText"
            android:paddingTop="12dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/txtServerPortLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtServerAddressLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:text="@string/server_port"
        android:layout_marginTop="16dp"
        android:labelFor="@id/edtServerPort"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtServerPortLayout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtServerPortLabel"
        app:layout_constraintStart_toStartOf="@id/txtServerPortLabel"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtServerPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="numberDecimal"
            android:paddingTop="12dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>